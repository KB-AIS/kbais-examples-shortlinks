{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "~sl-core": ["./core"],
      "~sl-core/*": ["./core/*"],

      "~sl-modules": ["./modules"],
      "~sl-modules/*": ["./modules/*"],

      "~sl-web": ["./runners/web"],
      "~sl-web/*": ["./runners/web/*"],
      "~sl-bot": ["./runners/bot"],
      "~sl-bot/*": ["./runners/bot/*"],
    }
  },
  "include": ["./src"]
}
