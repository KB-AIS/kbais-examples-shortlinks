{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~sl-core": ["./core"],
      "~sl-core/*": ["./core/*"],

      "~sl-core.infra": ["./core.infra"],
      "~sl-core.infra/*": ["./core.infra/*"],

      "~sl-modules": ["./modules"],
      "~sl-modules/*": ["./modules/*"],

      "~sl-web": ["./runners/web"],
      "~sl-web/*": ["./runners/web/*"],
      "~sl-bot": ["./runners/bot"],
      "~sl-bot/*": ["./runners/bot/*"],
    }
  },
  "include": ["./src"]
}
